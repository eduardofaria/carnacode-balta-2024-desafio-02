<button class="@_className" @onclick="HandleClick">@Label</button>

@code {
    [Parameter]
    public string Label { get; set; }

    string _className = "";

    [Parameter]
    public bool Primary
    {
        get
        {
            return _primary;
        }

        set
        {
            _primary = value;

            if (_primary)
            {
                _className = "primary";
            }
            else
            {
                _className = "";
            }
        }
    }

    private async Task HandleClick(MouseEventArgs args)
    {
        // EventCallback
        if (OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync(args);
        }
    }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    bool _primary;
}
